<%- include ('partials/header') %>
    <div class="ui main text container segment">
        <div class="ui huge header">
            <%= blog.title%>
        </div>
        <div class="top attached ">
            <div class="=item">
                <img class="ui centered rounded image" src="<%= blog.image%>">
                <div class=content>
                    <span><%= blog.dateOfCreate.toDateString()%></span>
                </div>
                <div class="description">
                    <p>
                        <%- blog.body %>
                    </p>
                </div>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog.id%>/edit">Edit Post</a>
            <form id="delete" action="/blogs/<%=blog.id%>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete Post</button>
            </form>
        </div>
        <%- include ('partials/footer') %>